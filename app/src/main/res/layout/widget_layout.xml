<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_layout"
    android:background="@drawable/my_widget_background"
    android:theme="@style/Theme.Material3.DynamicColors.Light"
    android:orientation="vertical"
    android:clickable="true"
    android:padding="@dimen/widget_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="?attr/colorPrimary"
        android:padding="@dimen/header_padding"
        android:background="@drawable/my_widget_background"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="?attr/colorOnPrimary"
            android:src="@drawable/ic_wikipedia" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginStart="16dp"
            android:text="Wikipedia ðŸ“š"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size_large"
            android:fontFamily="sans-serif-medium" />

        <ImageButton
            android:background="?attr/colorPrimary"
            android:id="@+id/refresh_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tint="?attr/colorOnPrimary"
            android:src="@drawable/ic_refresh_white" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_articles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Articles: ðŸ“„"
        android:textSize="@dimen/text_size_medium"
        android:textColor="?attr/colorOnSurface"
        android:paddingTop="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_active_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active Users: ðŸ‘¥"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_medium"
        android:textColor="?attr/colorOnSurface"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/widget_edits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edits: âœï¸"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_medium"
        android:textColor="?attr/colorOnSurface"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/widget_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textStyle="italic"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:paddingTop="8dp"
        android:text="Data from uz.wikipedia.org ðŸŒ" />
</LinearLayout>
